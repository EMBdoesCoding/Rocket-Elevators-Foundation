<%# # app/views/buildings/building_search.html.erb %>
<div class="row no-gutters wow slideInUp" data-wow-duration="1s">
  <div class="col-md-12 home-form">
    <%= form_tag(intervention_path, method: "post", class: "form-inline", remote: true) do %>
      <%= select_tag "customer", options_from_collection_for_select(Customer.all, "id", "company_name"), prompt: "Customer", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
      <%= select_tag "building", options_from_collection_for_select(Building.all, "id", "building_administrator_name"), prompt: "Building", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
      <%= select_tag "battery", options_from_collection_for_select(Battery.all, "id", "status"), prompt: "Battery", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
      <%= select_tag "column", options_from_collection_for_select(Column.all, "id", "status"), prompt: "Column", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
      <%= select_tag "elevator", options_from_collection_for_select(Elevator.all, "id", "status"), prompt: "Elevator", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
      <%= select_tag "employee", options_from_collection_for_select(Employee.all, "id", "first_name"), prompt: "Employee", class: "custom-select mb-0 mr-sm-0 mb-sm-0" %>
      <%= text_area "report", :report, size: "80x5" %>
      <%= submit_tag("Search", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>